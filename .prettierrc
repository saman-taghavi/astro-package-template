{
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-astro",
		"prettier-plugin-tailwindcss"
	],
	"semi": false,
	"tabWidth": 2,
	"useTabs": true,
	"printWidth": 100,
	"singleQuote": false,
	"trailingComma": "all",
	"jsxSingleQuote": false,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
